---
import Layout from '../layouts/Layout.astro';
---

<Layout title="LearnHub Pricing">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Choose Your Plan</h1>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
          <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
              <div class="card-header py-3">
                <h4 class="my-0 fw-normal">Free</h4>
              </div>
              <div class="card-body">
                <h1 class="card-title pricing-card-title">$0</h1>
                <ul class="list-unstyled mt-3 mb-4">
                  <li><small class="text-body-secondary fw-light">per user /mo billed annually</small></li>
                  <li>5 users Maximum</li>
                  <li>Help center access</li>
                </ul>
                <button type="button" onclick="learnhub()" class="w-100 btn btn-lg btn-outline-primary">Sign up for free</button>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
              <div class="card-header py-3">
                <h4 class="my-0 fw-normal">Premium</h4>
              </div>
              <div class="card-body">
                <h1 class="card-title pricing-card-title">$20</h1>
                <ul class="list-unstyled mt-3 mb-4">
                  <li><small class="text-body-secondary fw-light">per user /mo billed annually</small></li>
                  <li>20 users Maximum</li>
                  <li>Help center access</li>
                </ul>
                <button type="button" onclick="learnhub()" class="w-100 btn btn-lg btn-primary">Get started</button>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm border-primary">
              <div class="card-header py-3 text-bg-primary border-primary">
                <h4 class="my-0 fw-normal">Enterprise</h4>
              </div>
              <div class="card-body">
                <h1 class="card-title pricing-card-title">Contact Us</h1>
                <ul class="list-unstyled mt-3 mb-4">
                  <li>Contract users Maximum</li>
                  <li>Access to new features early</li>
                  <li>Custom SLAs</li>
                  <li>Help center access</li>
                </ul>
                <button type="button" onclick="contactUs()" class="w-100 btn btn-lg btn-primary">Contact us</button>
              </div>
            </div>
          </div>
        </div>
      </div>
  
      <!--Compare plans-->
      <h2 class="display-6 text-center mb-4">Compare plans</h2>
      <div class="table-responsive">
        <table class="table text-center">
          <thead>
            <tr>
              <th style="width: 34%;"></th>
              <th style="width: 22%;">Free</th>
              <th style="width: 22%;">Premium</th>
              <th style="width: 22%;">Enterprise</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row" class="text-start">Courses</th>
              <td>3</td>
              <td>10</td>
              <td><div style="height:24;width:24;"><span class="material-symbols-outlined">check</span></div></td>
            </tr>
          </tbody>
  
          <tbody>
            <tr>
              <th scope="row" class="text-start">Custom SLAs</th>
              <td></td>
              <td></td>
              <td><div style="height:24;width:24;"><span class="material-symbols-outlined">check</span></div></td>
            </tr>
            <tr>
              <th scope="row" class="text-start">Permissions</th>
              <td><div style="height:24;width:24;"><span class="material-symbols-outlined">check</span></div></td>
              <td><div style="height:24;width:24;"><span class="material-symbols-outlined">check</span></div></td>
              <td><div style="height:24;width:24;"><span class="material-symbols-outlined">check</span></div></td>
            </tr>
            <tr>
              <th scope="row" class="text-start">Unlimited members</th>
              <td>5</td>
              <td>20</td>
              <td><div style="height:24;width:24;"><span class="material-symbols-outlined">check</span></div></td>
            </tr>
            <tr>
              <th scope="row" class="text-start">Extra security</th>
              <td></td>
              <td><div style="height:24;width:24;"><span class="material-symbols-outlined">check</span></div></td>
              <td><div style="height:24;width:24;"><span class="material-symbols-outlined">check</span></div></td>
            </tr>
          </tbody>
        </table>
      </div>

	<script is:inline>
        function learnhub(){
          analytics.track('Sign_up', {
              type: 'Non_Enterprise'
          })
          window.location.href = 'https://learnhub.nordicgamelab.org';
        }
        function contactUs(){
          analytics.track('Sign_up', {
              type: 'Enterprise'
          })
          window.location.href = 'https://www.nordicgamelab.org/#contact';
        }
	</script>
</Layout>

